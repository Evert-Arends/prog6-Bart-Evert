@using HotelDeBotel.Models.Viewmodels
@model ReservationVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reservation details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Room.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Room.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateString)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Room.Price)
        </dt>

        <dd>
            &euro;@Html.DisplayFor(model => model.Room.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Discount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiscountPercentage)
        </dd>

        <dt>
            Final Price
        </dt>

        <dd>
            &euro;@ViewBag.Repo.CalculateNewPrice(Model.Room.Price, Model.Discount)
        </dd>

        <dt>
            Guests:
        </dt>
        @foreach (var item in Model.Guests)
        {
            <dd>
                @Html.DisplayFor(model => item.Name)
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
